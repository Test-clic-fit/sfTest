{% extends "base.html.twig" %}

{% block body %}
    <div class="container-fluid mt-3">
        <div class="row d-flex flex-md-row flex-column justify-content-center">
            <div class="col-md-6 col-12">
                <img src="../uploads/{{ item.picture }}">
            </div>
            <div class="col-md-6 col-10 m-md-0 m-5 d-flex flex-column">
                <h1 class="m-0 mb-2 font-weight-bold text-primary">{{ item.title }}</h1>
                <p class="mt-2 cake-description">{{ item.description }}</p>
                <p>{{ item.zipcode }}</p>
                <p>{{ item.vendor.phonenumber }}</p>
            </div>
        </div>
    </div>
{% endblock %}